<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/settingsLayout"
        android:orientation="vertical"
        android:background="#21586B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_music_note_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="FON musiqasi"
                android:gravity="center"
                android:textSize="@dimen/settings_txt_size"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/horror_font"
                />

            <Switch
                android:id="@+id/switchBgMusic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:paddingBottom="10dip"
            />



        <LinearLayout
            android:orientation="vertical"
            android:background="#21586B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/volume"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="OVOZ"
                    android:gravity="center"
                    android:textSize="@dimen/settings_txt_size"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:fontFamily="@font/horror_font"
                    />

                <SeekBar
                    android:id="@+id/seekbarVolume"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    />
            </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:paddingBottom="10dip"
            />
        <LinearLayout
            android:id="@+id/shareBtn"
            android:orientation="vertical"
            android:background="#21586B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_share_black_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="DASTURNI YUBORISH"
                    android:gravity="center"
                    android:textSize="@dimen/settings_txt_size"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:fontFamily="@font/horror_font"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:paddingBottom="10dip"
            />

        <LinearLayout
            android:id="@+id/rate"
            android:orientation="vertical"
            android:background="#21586B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_star_black_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="DASTURNI BAHOLASH"
                    android:gravity="center"
                    android:textSize="@dimen/settings_txt_size"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:fontFamily="@font/horror_font"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:background="#000000"
            android:paddingBottom="10dip"
            />



        <LinearLayout
            android:orientation="vertical"
            android:background="#21586B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                >
                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_theme"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:text="CHIQISH"
                    android:textColor="#fff"
                    android:textSize="@dimen/settings_txt"
                    android:fontFamily="@font/damned"
                   android:paddingStart="@dimen/settings_padding"
                    android:drawableStart="@drawable/ic_backspace_black_24dp"

                    />
                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_theme"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/settings_txt"
                    android:textColor="#fff"
                    android:fontFamily="@font/damned"
                    android:text="SAQLASH"
                    android:drawableEnd="@drawable/ic_save_black_24dp"
                    android:paddingEnd="@dimen/settings_padding"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</LinearLayout>